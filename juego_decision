                    print("Vida restante del enemigo: ", round(cpu_vidas, 1))
                    print("Vidas restantes: ", round(vidas, 1))

                    adivinar = input("Tienes la oportunidad de adivinar el tipo de arma del enemigo, si lo haces bien el daño que hiciste será duplicado, si aciertas mal recibiras el daño.  Adivinar (si/no): ").lower()

                    if adivinar == "si":
                        resp = input("Escoge el tipo de arma que crees que ha utilizado tu enemigo. (baston, espada, lanza): ").lower()
                        
                        if resp == "espada":
                            cpu_vidas -= 0.1
                            print("Has adivinado correctamente, tu enemigo recibe 0.1 de daño adicional")
                            
                            if round(cpu_vidas, 1) <= 0.0:
                                print("Felicidades, has derrotado a tu enemigo y has ganado!")
                                sys.exit()
                            else:
                                print("Vida restante del enemigo: ", round(cpu_vidas, 1))

                        elif resp == "baston":
                            vidas -= 0.6
                            print("Recibes 0.6 de daño por responder incorrectamente.")

                            if round(vidas, 1) <= 0.0:
                                print("Te has quedado sin vidas. Vuelve a intentarlo.")
                                sys.exit()
                            else:
                                print("Vidas restantes: ", round(vidas, 1))


                        elif resp == "lanza":
                            vidas -= 0.6
                            print("Recibes 0.6 de daño por responder incorrectamente.")

                            if round(vidas, 1) <= 0.0:
                                print("Te has quedado sin vidas. Vuelve a intentarlo.")
                                sys.exit()
                            else:
                                print("Vidas restantes: ", round(vidas, 1))

                        else:
                            vidas -= 1
                            print("Has seleccionado una opción que no existe, pierdes una vida. Vidas restantes: ", round(vidas, 1)) 
                            if round(vidas, 1) <= 0.0:
                                print("Te has quedado sin vidas. Vuelve a intentarlo.")
                                sys.exit()

                    elif adivinar == "no":
                        vidas -= 0.4
                        print("El enemigo te ha agarrado con la guardia baja por estar pensando, como consecuencia, recibes un ataque suyo de 0.4")

                        if round(vidas, 1) <= 0.0:
                            print("Te has quedado sin vidas. Vuelve a intentarlo.")
                            sys.exit()
                        else:
                            print("Vidas restantes: ", round(vidas, 1))
                    
                    else:
                        vidas -= 1
                        print("Has seleccionado una opción que no existe, pierdes una vida. Vidas restantes: ", round(vidas, 1)) 
                        if round(vidas, 1) <= 0.0:
                            print("Te has quedado sin vidas y pierdes el juego. Vuelve a intentarlo.")
                            sys.exit()

            elif cpu_tipo_arma == "lanza" and avatar_tipo_arma == "baston":
                
                cpu_vidas -= 0.1
                vidas -= 0.6
                
                if round(vidas, 1) <= 0.0:
                    print("Te has quedado sin vidas y pierdes el juego. Vuelve a intentarlo.")
                    sys.exit()

                elif round(cpu_vidas, 1) <= 0.0:
                    print("Felicidades, has derrotado a tu enemigo y has ganado!")
                    sys.exit()
                
                else:
                    print("Recibiste 0.6 de daño mientras tu enemigo recibió 0.1 de daño")
                    print("Vida restante del enemigo: ", round(cpu_vidas, 1))
                    print("Vidas restantes: ", round(vidas, 1))

                    adivinar = input("Tienes la oportunidad de adivinar el tipo de arma del enemigo, si lo haces bien el daño que hiciste será duplicado, si aciertas mal recibiras el daño.  Adivinar (si/no): ").lower()

                    if adivinar == "si":
                        resp = input("Escoge el tipo de arma que crees que ha utilizado tu enemigo. (baston, espada, lanza): ").lower()
                        
                        if resp == "lanza":
                            cpu_vidas -= 0.1
